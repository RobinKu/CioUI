<?xml version="1.0" encoding="utf-8" ?>
<cioUIApplication startUpForm="mainWindow" renderType="Winforms">
  <form id="mainWindow" title="Sample">
    <navigation type="menu">
      <command label="Edit contact" command="CioUI.Examples.SimpleApp.Commands.EditContact"/>
    </navigation>
    <formManager type="tabbed"/>
  </form>
  <form id="contactEditor" title="Edit contact" bindingType="CioUI.Examples.Contact" formType="edit">
    <group label="General">
      <editor label="Firstname" binding="Firstname"/>
      <editor label="Lastname" binding="Lastname"/>
    </group>
    <group label="Address">
      <editor label="Street" binding="Address.Street"/>
      <editor label="Zipcode" binding="Address.Zipcode"/>
      <editor label="City" binding="Address.City"/>
      <editor label="Country" binding="Address.Country"/>
    </group>
    <group label="Contact information">
      <editor label="Emailadress" binding="Emailaddress"/>
      <editor label="Phone" binding="Phone"/>
    </group>
  </form>
</cioUIApplication>